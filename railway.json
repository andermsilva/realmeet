{
  "version": 0.2,
  "phases": {
    "install": {
      "runtime-versions": {
        "java": "corretto17",
        "docker": 20
      }
    },
    "build": {
      "commands": [
        "echo Build started on `date`",
        "mvn clean package"
      ]
    }
  },
  "artifacts": {
    "files": [
      "service/target/*.jar"
    ],
    "discard-paths": "yes"
  },
  "cache": {
    "paths": [
      "/root/.m2/**/*"
    ]
  }
}{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
   "commands": [
        "echo Build started on `date`",
        "mvn clean package"
      ]
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
